<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="Opendeck.Win32.App.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Opendeck.Win32.App"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Opendeck.Win32.App"
    >

    <Grid Background="Transparent" Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- App Title -->
        <TextBlock 
            Grid.Row="0"
            Text="Opendeck" 
            FontSize="36" 
            FontWeight="SemiBold" 
            FontFamily="Arial"
            Margin="0,0,0,10" />

        <!-- Version -->
        <TextBlock 
            Grid.Row="1"
            Text="v0.1 alpha" 
            FontSize="15" 
            FontWeight="SemiBold"
            Margin="0,0,0,30" />

        <!-- Service Status Label -->
        <TextBlock 
            Grid.Row="2"
            Text="Service Status" 
            FontSize="20" 
            FontWeight="SemiBold"
            Margin="0,0,0,15"/>

        <!-- Service Control Panel -->
        <StackPanel 
            Grid.Row="3"
            Orientation="Horizontal"
            VerticalAlignment="Top"
            Margin="0,0,0,20">
            <ToggleSwitch
                OffContent="Service Disabled" 
                OnContent="Service Enabled" 
                Toggled="ToggleSwitch_Toggled"
                Margin="0,0,20,0"/>
            <ProgressRing 
                x:Name="serviceToggleProgress"
                Width="24"
                Height="24"
                VerticalAlignment="Center"/>
        </StackPanel>
        <!-- Debug Section -->
        <TextBlock 
            Grid.Row="4"
            Text="Debug Output" 
            FontSize="20" 
            FontWeight="SemiBold"
            Margin="0,0,0,10"/>
        <!-- Debug TextBox -->
        <Border 
            Grid.Row="5"
            BorderBrush="Gray"
            BorderThickness="1"
            Height="150"
            VerticalAlignment="Top"
            Margin="0,50,0,0"
            CornerRadius="6">
            <TextBox 
                x:Name="debug"
                AcceptsReturn="True"
                IsReadOnly="True"
                FontFamily="Consolas"
                FontSize="12"
                Padding="5"
                Text="Debug output will appear here..."/>
        </Border>
    </Grid>
</Window>